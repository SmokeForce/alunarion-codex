---
interface Props {
    title: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
<slot />
</body>
</html>

<style is:global>
    :root {
        --bg-dark: #1a1a1d;
        --bg-panel: #2d2d30;
        --accent: #c3a143; /* Gold accent */
        --accent-dim: #7a6628;
        --text-main: #e0e0e0;
        --text-muted: #a0a0a0;
        --danger: #ff4d4d;
        --grid-line: #3e3e42;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--bg-dark);
        color: var(--text-main);
        margin: 0;
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    /* Sidebar */
    .sidebar {
        width: 200px;
        background-color: #121212;
        display: flex;
        flex-direction: column;
        border-right: 1px solid var(--grid-line);
        flex-shrink: 0;
        z-index: 20;
    }

    .sidebar h1 {
        font-size: 1.2rem;
        text-align: center;
        color: var(--accent);
        padding: 20px 0;
        border-bottom: 1px solid var(--grid-line);
        margin: 0;
    }

    .nav-btn {
        background: none;
        border: none;
        color: var(--text-muted);
        padding: 15px 20px;
        text-align: left;
        cursor: pointer;
        transition: 0.2s;
        font-size: 1rem;
        border-left: 3px solid transparent;
    }

    .nav-btn:hover { background-color: var(--bg-panel); color: var(--text-main); }
    .nav-btn.active { background-color: var(--bg-panel); color: var(--accent); border-left: 3px solid var(--accent); }

    /* Main Content */
    .main-content {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        position: relative;
    }

    .filter-bar {
        padding: 15px;
        background-color: var(--bg-panel);
        border-bottom: 1px solid var(--grid-line);
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        align-items: center;
        z-index: 10;
    }

    .filter-select {
        background-color: var(--bg-dark);
        color: var(--text-main);
        border: 1px solid var(--grid-line);
        padding: 8px;
        border-radius: 4px;
        min-width: 150px;
    }

    .search-input {
        background-color: var(--bg-dark);
        color: var(--text-main);
        border: 1px solid var(--grid-line);
        padding: 8px 12px;
        border-radius: 4px;
        flex-grow: 1;
        min-width: 200px;
    }
    .search-input:focus {
        outline: none;
        border-color: var(--accent);
    }

    .content-scroll {
        padding: 20px;
        overflow-y: auto;
        flex-grow: 1;
    }

    /* ---------------- MAP STYLES ---------------- */

    .map-viewport {
        width: 100%;
        height: 100%;
        overflow: scroll;
        background-color: #050505;
        position: relative;
        background-image:
                linear-gradient(var(--grid-line) 1px, transparent 1px),
                linear-gradient(90deg, var(--grid-line) 1px, transparent 1px);
        background-size: 120px 120px;
        background-position: center;
    }

    .map-canvas {
        width: 5000px;
        height: 5000px;
        position: relative;
    }

    .map-tile {
        position: absolute;
        width: 118px;
        height: 118px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        font-size: 0.85rem;
        font-weight: bold;
        cursor: pointer;
        border: 1px solid rgba(255,255,255,0.2);
        box-shadow: 0 4px 6px rgba(0,0,0,0.5);
        transition: transform 0.2s, z-index 0.2s, box-shadow 0.2s;
        padding: 5px;
        box-sizing: border-box;
        text-shadow: 0 2px 4px rgba(0,0,0,0.8);
        border-radius: 4px;

        /* Green Style Forced */
        background: linear-gradient(135deg, #134e5e, #71b280);
        color: #fff;
        border-color: #71b280;
    }

    .map-tile:hover {
        transform: scale(1.15);
        z-index: 100 !important;
        box-shadow: 0 10px 20px rgba(0,0,0,0.8);
        border-color: #fff;
    }

    .map-tile.unknown {
        opacity: 0.5;
        filter: grayscale(100%);
        border-style: dashed;
    }

    .secret-indicator {
        position: absolute;
        top: 5px;
        right: 5px;
        background: rgba(0,0,0,0.6);
        color: var(--danger);
        border-radius: 50%;
        width: 18px;
        height: 18px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 0.75rem;
        font-weight: bold;
        border: 1px solid var(--danger);
        box-shadow: 0 0 5px var(--danger);
        z-index: 5;
    }

    .recenter-btn {
        position: absolute;
        bottom: 20px;
        right: 20px;
        background: var(--bg-panel);
        color: var(--accent);
        border: 1px solid var(--accent);
        padding: 10px 20px;
        cursor: pointer;
        z-index: 50;
        border-radius: 4px;
        font-weight: bold;
    }

    /* ---------------- CARD STYLES ---------------- */
    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }

    .card {
        background-color: var(--bg-panel);
        border: 1px solid var(--grid-line);
        border-radius: 8px;
        padding: 20px;
        transition: all 0.2s;
        cursor: pointer;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .card:hover {
        transform: translateY(-4px);
        border-color: var(--accent);
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
    }

    .card-header {
        border-bottom: 1px solid var(--grid-line);
        padding-bottom: 10px;
        margin-bottom: 10px;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: var(--accent);
        margin: 0;
    }

    .card-subtitle {
        font-size: 0.85rem;
        color: var(--text-muted);
        margin-top: 4px;
    }

    .tag {
        display: inline-block;
        padding: 2px 8px;
        border-radius: 4px;
        background-color: var(--bg-dark);
        font-size: 0.8rem;
        margin-right: 5px;
        margin-bottom: 5px;
        border: 1px solid var(--grid-line);
    }
    .tag.faction { border-color: #4a9eff; color: #4a9eff; }
    .tag.tier { border-color: var(--danger); color: var(--danger); }
    .tag.race { border-color: var(--accent); color: var(--accent); }
    .tag.req { border-color: #a335ee; color: #a335ee; }

    /* ---------------- MODAL & DETAILS ---------------- */
    .modal {
        display: none;
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0,0,0,0.85);
        z-index: 1000;
        justify-content: center;
        align-items: center;
        backdrop-filter: blur(3px);
    }
    .modal.open { display: flex; }
    .modal-content {
        background: var(--bg-panel);
        padding: 40px;
        border-radius: 8px;
        max-width: 800px;
        width: 90%;
        max-height: 90vh;
        overflow-y: auto;
        border: 1px solid var(--accent);
        box-shadow: 0 0 30px rgba(0,0,0,0.8);
        position: relative;
    }
    .close-modal {
        position: absolute;
        top: 20px;
        right: 20px;
        cursor: pointer;
        font-size: 2rem;
        color: var(--text-muted);
        line-height: 1;
    }

    .detail-row { margin-bottom: 15px; border-bottom: 1px solid #3e3e42; padding-bottom: 15px; }
    .detail-key { font-weight: bold; color: var(--accent); display: block; margin-bottom: 5px; text-transform: capitalize; }
    .detail-value { color: var(--text-main); white-space: pre-wrap; }

    /* Hidden Info */
    .hidden-info-container {
        margin-top: 15px;
        padding: 15px;
        background-color: rgba(20, 20, 20, 0.5);
        border-left: 3px solid var(--danger);
        border-radius: 4px;
    }
    .hidden-label {
        font-size: 0.75rem; text-transform: uppercase; color: var(--danger); font-weight: bold; display: block; margin-bottom: 8px;
    }
    .blurred-text {
        filter: blur(8px); cursor: pointer; opacity: 0.7; transition: 0.3s;
    }
    .blurred-text:hover { opacity: 1; filter: blur(4px); }
    .blurred-text.revealed { filter: none; opacity: 1; cursor: text; }
</style>